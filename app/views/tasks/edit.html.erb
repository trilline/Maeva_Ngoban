<div class="mx-auto md:w-2/3 w-full" style="margin-top:15vh" >
  <div class="card mt-4" style="border-radius: .75rem; border-color: transparent;">
    <div class="card-body py-4 px-4 px-md-5">
      <h1 class="font-bold text-4xl">Editing task</h1>

      <%= render "form", task: @task %>
    </div>
    <div class="card-footer bg-transparent border-0 d-flex justify-content-end">
      <%= link_to "Show this task", @task, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to "Back to tasks", tasks_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  </div>
</div>
